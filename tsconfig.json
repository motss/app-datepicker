{
  "extends": "./node_modules/@reallyland/tools/browser/lit/tsconfig.json",
  "compilerOptions": {
    "declarationDir": "dist",
    "inlineSources": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": false,
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "tsconfig.node.json"
    }
  ]
}
