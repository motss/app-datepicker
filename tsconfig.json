{
  "extends": "@reallyland/tsconfig/browser",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "target": "ES2020",
    "sourceMap": false,
    "inlineSources": false,
    "incremental": true,
    "tsBuildInfoFile": "./.app-datepicker.tsbuildinfo",
    "types": [
      "@wdio/mocha-framework",
      "node",
      "webdriverio"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
